{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true
    },
    "editor.minimap.enabled": false,
    "editor.rulers": [
        {
            "column": 120
        }
    ],
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "notebook.codeActionsOnSave": {
        "notebook.source.organizeImports": "explicit"
    },
    "notebook.formatOnSave.enabled": true,
    "pylint.args": [
        "--disable=bare-except,import-error,invalid-name,not-an-iterable,redefined-outer-name,relative-beyond-top-level,self-assigning-variable,too-few-public-methods,too-many-arguments,too-many-branches,too-many-function-args,too-many-instance-attributes,too-many-locals,too-many-statements,no-name-in-module,unused-argument",
        "--max-line-length=120"
    ],
    "ruff.format.args": [
        "--line-length=120"
    ],
    "ruff.lint.args": [
        "--ignore=E722",
        "--line-length=120"
    ],
    "ruff.organizeImports": false
}
